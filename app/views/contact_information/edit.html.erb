<% @page_name = "Editing contact information" %>

<% form_for @contact_information, :html => {:class=> 'default-form'} do |f| %>
  <fieldset>
    <h3>Contact Information</h3>

    <p>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :organization, "Organization" %>
      <%= f.text_field :organization %>
    </p>
    <p>
      <%= f.label :phone, "Phone" %>
      <%= f.text_field :phone %>
    </p>
    <p>
      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>
    </p>
  </fieldset>

  <%= submit_button("Save") %>
<% end %>

<h1>New child</h1>

<% form_for(@child, :html => {:multipart => true}) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :age %><br/>
      <%= f.text_field :age %>
    </p>
    <p>
      <%= f.radio_button :gender, "Male" %><%= f.label :gender_male, "Male" %>
      <%= f.radio_button :gender, "Female" %><%= f.label :gender_female, "Female" %>
    </p>
    <p>
      <%= f.label :photo, "Photo" %>
      <%= f.file_field :photo %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', children_path %>
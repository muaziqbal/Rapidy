<h1>New child</h1>

<% form_tag '/children', :multipart => true do %>

    <%= error_messages_for :child %>

    <% Schema.get_schema.each do |form| %>
        <%= render :partial => "form_new", :locals => {:form => form} %>
    <% end %>

    <p>
      <%= label_tag "child[photo]", "Photo" %><br/>
      <%= file_field_tag "child[photo]" %>
    </p>

    <p>
      <%= submit_tag "Create" %>
    </p>

<% end %>

<%= link_to 'Back', children_path %>
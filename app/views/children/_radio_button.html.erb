<% name = field["name"]
   options = field["options"] %>

<%= label_tag "child[#{form_name}][#{name}]", name.humanize %><br/>

<% options.each do |option| %>
    <%= radio_button_tag "child[#{form_name}][#{name}]", option.capitalize %>
    <%= label_tag "child[#{form_name}][#{name}_#{option}", option.capitalize %>
<% end %>


<%= form_for @field, :url => url, :html => {:class => "new-field default-form"} do |f| %>
  <%= error_messages_for :field %>

  <%= f.hidden_field 'type', :value => @field.type %>

  <fieldset>
    <h1 class="no_border"><%= link_to 'Form', formsections_path %> &gt; <%= link_to @form_section.name, edit_form_section_path(@form_section) %></h1>
    <h3><%= @field.type.humanize %> details</h3>
 		<%= render :partial => "common", :locals => {:f => f} %>
    <div class="help-text-container">
      <p>
 	  	  <%= f.label :option_strings_text, 'Options' %>
 			  <br />
 			  <br />
 			  <span class="help-text">Enter each option on a new line</span>
     	</p>
 	  </div>
    <div>
 		  <%= f.text_area :option_strings_text %>
   	</div>
  </fieldset>
  <%= render :partial => "shared/add_translations", :locals => {:properties => [{:display_name => :text_field}, {:help_text => :text_area}, {:option_strings_text => :text_area}], :f => f}%>
    <div class="btn_panel">
      <%= cancel_button(edit_form_section_path(@form_section)) %>
      <p class='submitButton' >
      <%= f.submit 'Save' %>
      </p>
    </div>
<% end %>


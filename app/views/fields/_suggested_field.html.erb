       
<tr class="<%=suggested_field.unique_id%>Display">
  <td>
  <% form_for suggested_field.field, :url => formsection_fields_path(form_section_id), :html => {:method => :post}  do |f| %>
	  <%= submit_tag "#{suggested_field.name}" %> (<%= suggested_field.field.name %>)

		<%= f.hidden_field :name %>
		<%= f.hidden_field :type %>
		<%= f.hidden_field :help_text %>
	  	<%= option_fields_for f, suggested_field %>
	  	<input type="hidden" name="from_suggested_field" value="<%=suggested_field.unique_id%>"/>

  <% end %>
    </td>
  <td>
			<%=suggested_field.description%>
    </td>
  <td>
		  <%= suggested_field.field.type %>

  </td>
  <td>
		<% if(suggested_field.field.options) %>
				<%=display_options suggested_field.field %>
		<% end %>

    </td>
</tr>